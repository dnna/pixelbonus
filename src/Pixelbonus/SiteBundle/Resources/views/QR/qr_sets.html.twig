{% extends 'PixelbonusSiteBundle::base.html.twig' %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{course.name}}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <tr>
                        <th>{{'qr.createdAt'|trans}}</th>
                        <th>Tags</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                    {% for qrset in qrsets %}
                        <tr>
                            <td><a href="#">{{qrset.createdAt|date('d-m-Y')}}</a></td>
                            <td>{{qrset.tagsFromString|join(', ')}}</td>
                            <td style="width: 20%;"><form action="{{path('print_qr', {'qrset': qrset.id})}}"><input type="number" name="quantity" style="width: 50px; margin-right: 5px; padding-top: 2px; padding-bottom: 2px;" value="10" /><input type="submit" class="btn btn-default btn-sm" value="Reprint" /></form></td>
                            <td style="width: 10%;"><a href="#" class="btn btn-warning btn-sm">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <a href="{{path('new_qrset', {'course': course.id})}}" id="new-qr-set" class="btn btn-default">{{'qr.create'|trans}}</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}