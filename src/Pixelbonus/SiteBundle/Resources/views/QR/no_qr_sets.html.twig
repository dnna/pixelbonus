{% extends 'PixelbonusSiteBundle::base.html.twig' %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{course.name}}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <a href="{{path('new_qrset', {'course': course.id})}}" id="new-qr-set" class="btn btn-success btn-lg">{{'courses.create_qr_set'|trans}}</a>
                <p><br /><small>{{'courses.qr_set_hint'|trans}}</small></p>
            </div>
        </div>
        <div class="row fhide" id="new-qr-set-form">
            <br />
            <div class="col-lg-8 col-lg-offset-2">
                <form action="{{path('new_qrset', {'course': course.id})}}" method="post">
                    {{form_widget(form)}}
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" name="_download" class="btn btn-default btn-lg">{{'qr.form.download'|trans}}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script>
        var existingTags = ["{{'now'|date('d-m-Y')}}", "{{'now'|date('H:i')}}"];
    </script>
    <script src="{{asset('js/pages/qrsets.js')}}"></script>
{% endblock %}