{% extends 'PixelbonusSiteBundle::base.html.twig' %}

{% block title %}{{'form.forgot_password'|trans}}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{'form.forgot_password'|trans}}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    {% if invalid_username is defined %}
                        <div class="alert alert-danger alert-error">{{ 'resetting.request.invalid_username'|trans({'% username%': invalid_username}) }}</div>
                    {% endif %}
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="username">{{ 'resetting.request.username'|trans }}</label>
                            <input type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" />
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input type="submit" class="btn btn-success btn-lg" value="{{ 'resetting.request.submit'|trans }}" />
                        </div>
                    </div>
                    <hr />
                    <div>
                        <a href="{{path('fos_user_security_login')}}">{{'layout.login'|trans}}</a>
                    </div>
                    <hr />
                    <div>
                        <a href="{{path('fos_user_registration_register')}}">{{'layout.register'|trans}}</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock content %}
