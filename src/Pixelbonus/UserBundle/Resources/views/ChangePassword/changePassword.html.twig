{% extends 'PixelbonusSiteBundle::base.html.twig' %}

{% block title %}{{'header.change_password'|trans({}, 'messages')}}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{'header.change_password'|trans({}, 'messages')}}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {{form_widget(form)}}
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-success btn-lg" />{{ 'change_password.submit'|trans }}</button>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <a href="{{path('fos_user_profile_edit')}}">{{'header.profile_edit'|trans({}, 'messages')}}</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock content %}